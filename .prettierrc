{
	"printWidth": 100,
	"arrowParens": "always",
	"bracketSameLine": false,
	"bracketSpacing": true,
	"singleQuote": true,
	"tabWidth": 2,
	"useTabs": true,
	"overrides": [
		{
			"files": ".prettierrc",
			"options": { "parser": "json" }
		},
		{
			"files": ["*.yml", "*.yaml"],
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		}
	]
}
